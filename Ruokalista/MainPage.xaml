<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ruokalista.MainPage">

    <StackLayout BackgroundColor="Black">
        <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
            <StackLayout>
                <Label Text="Ruokalista" x:Name="TitleLabel" TextColor="White" FontSize="30"/>
                <Label x:Name="updatedlabel" Text="Päivitetty: " FontSize="15" TextColor="White"></Label>
            </StackLayout>
        </Frame>
        <ScrollView>
            <Label x:Name="RuokaLabel" Margin="5" TextColor="White" FontSize="20"></Label>
        </ScrollView>
        
       
    </StackLayout>

</ContentPage>
